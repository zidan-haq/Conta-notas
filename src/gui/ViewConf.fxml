<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="570.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewConfController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="21.0" prefWidth="653.0" text="Configurações" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <Pane prefHeight="58.0" prefWidth="700.0" />
      <Label text="Local onde o programa está instalado:">
         <VBox.margin>
            <Insets left="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="localDoPrograma" prefHeight="1.0" prefWidth="74.0">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </TextField>
      <Label text="Escolha a quantidade de caixas que deseja manter salvo:">
         <VBox.margin>
            <Insets left="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <ComboBox fx:id="quantidadeDeCaixasSalvos" prefHeight="26.0" prefWidth="427.0">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </ComboBox>
      <Label text="Selecione uma impressora:">
         <VBox.margin>
            <Insets left="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <ComboBox fx:id="selecionarImpressora" prefHeight="26.0" prefWidth="427.0">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </ComboBox>
      <Pane prefHeight="201.0" prefWidth="700.0" />
      <HBox alignment="TOP_RIGHT" spacing="15.0">
         <children>
            <Button fx:id="btCancelar" mnemonicParsing="false" onAction="#onBtCancelarAction" style="-fx-background-color: black;" text="Cancelar" textFill="WHITE" />
            <Button fx:id="btSalvar" mnemonicParsing="false" onAction="#onBtSalvarAction" style="-fx-background-color: black;" text="Salvar" textFill="WHITE" />
         </children>
         <padding>
            <Insets right="20.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="15.0" top="30.0" />
   </padding>
</VBox>
